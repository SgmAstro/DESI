#!/bin/bash                                                                                                               
#SBATCH -p cosma                                                                                                                                                                                    
#SBATCH -t 300                                                                                                                                                                                     
#SBATCH -o gold_d8_pipeline.log                                                                                                                                                                     
#SBATCH -A durham                                                                                                                                                                                    
#SBATCH --nodes=1                                                                                                                                                                                    
#SBATCH --ntasks-per-node=1
#SBATCH --open-mode=append

# Submit with:  sbatch gold_d8_pipeline                                                                                        
# to qos of [debug, regular]
#
# See status with e.g. squeue -u mjwilson                                                                                        
#

if [[ -z "${DRYRUN}" ]]; then
  export DRYRUN=''                                                                                                                                                                               
  # export DRYRUN='--dryrun'
else
  echo 'DRYRUN SET TO BE '$DRYRUN
fi

export CODE_ROOT=$HOME/DESI/

export TILING_CATDIR=$HOME/data/
export GOLD_DIR=$HOME/data/GAMA4/
export RANDOMS_DIR=$HOME/data/GAMA4/randoms/

export PATH=$HOME/.conda/envs/lumfn/bin/:$HOME/DESI/bin/:$PATH
export PYTHONPATH=$HOME/$HOME/DESI/:$PYTHONPATH

echo
echo 'Environment:'
echo
echo 'Code: '$CODE_ROOT
echo 'Gold output dir.: '$GOLD_DIR
echo 'Randoms output dir: '$RANDOMS_DIR

cd $CODE_ROOT

# source /project/projectdirs/desi/software/desi_environment.sh master

# Dependency on randoms bd files, for fillfactor and bound_dist.
# Hence field argument. 
echo 'Running gen_ddp_n8.py; logging to logs/gama_ddp_n8.log'

# python gen_ddp_n8.py $DRYRUN > $CODE_ROOT/logs/gama_ddp_n8.log

echo 'Running gen_gold_lf.py; logging to logs/gama_lumfn.log'

# References schechter fn given a ddp n8 catalog (for fill factor).                                                                                                                                
python gen_gold_lf.py $DRYRUN > $CODE_ROOT/logs/gama_lumfn.log

# echo 'Running gen_gold_lf.py; logging to logs/gama_lumfn_d8_G9/12/15.log'

# Density dependent schechter fn. given a ddp_n8 catalog.
# python gen_gold_lf.py --density_split --field G9  $DRYRUN > $CODE_ROOT/logs/gama_lumfn_d8_G9.log
# python gen_gold_lf.py --density_split --field G12 $DRYRUN > $CODE_ROOT/logs/gama_lumfn_d8_G12.log
# python gen_gold_lf.py --density_split --field G15 $DRYRUN > $CODE_ROOT/logs/gama_lumfn_d8_G15.log

echo
echo 'Done.'
