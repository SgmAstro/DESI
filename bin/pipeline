#!/bin/bash
export RESET=1

# export DRYRUN=''
export DRYRUN='--dryrun'                                                                                                                                                                           

export CODE_ROOT=$HOME/DESI/

export TILING_CATDIR=/cosma5/data/durham/dc-wils7/
export GOLD_DIR=/cosma5/data/durham/dc-wils7/GAMA4/
export RANDOMS_DIR=/cosma5/data/durham/dc-wils7/GAMA4/randoms/

export PATH=$HOME/.conda/envs/lumfn/bin/:$HOME/DESI/bin/:$PATH
export PYTHONPATH=$HOME/$HOME/DESI/:$PYTHONPATH

if (( $RESET > 0 )); then
    echo '>>>>>  TRASHING GOLD_DIR AND RANDOMS  <<<<<.'

    rm $GOLD_DIR/*.fits
    rm $RANDOMS_DIR/*$FIELD*.fits
fi

# Generate all steps up to reference LF. 
GOLD_JOBID=$(sbatch gold_pipeline --parsable  --export=ALL,DRYRUN=$DRYRUN)
GOLD_JOBID=$(echo $GOLD_JOBID | awk '{print $NF}')

echo '-----'
echo $GOLD_JOBID
echo '-----'

# Generate all steps up to random fill factor and bound_dist. 
RAND_G9_JOBID=$(sbatch rand_pipeline  --parsable --export=ALL,FIELD=G9,DRYRUN=$DRYRUN)
RAND_G12_JOBID=$(sbatch rand_pipeline --parsable --export=ALL,FIELD=G12,DRYRUN=$DRYRUN)
RAND_G15_JOBID=$(sbatch rand_pipeline --parsable --export=ALL,FIELD=G15,DRYRUN=$DRYRUN)

RAND_G9_JOBID=$(echo $RAND_G9_JOBID| awk '{print $NF}')
RAND_G12_JOBID=$(echo $RAND_G9_JOBID | awk '{print $NF}')
RAND_G15_JOBID=$(echo $RAND_G15_JOBID | awk '{print $NF}')

echo '-----'
echo $RAND_G9_JOBID
echo $RAND_G12_JOBID
echo $RAND_G15_JOBID
echo '-----'

# Requires ddp cat. & random fill factor. 
# Note: runs all fields simultaneously. 
sbatch gold_d8_pipeline --dependency=afterok:$GOLD_JOBID

# Requires ddp cat, & randoms. 
sbatch rand_d8_pipeline --export=ALL,FIELD=G9  --dependency=afterok:$GOLD_JOBID:$RAND_G9_JOBID
sbatch rand_d8_pipeline --export=ALL,FIELD=G12 --dependency=afterok:$GOLD_JOBID:$RAND_G12_JOBID 
sbatch rand_d8_pipeline --export=ALL,FIELD=G15 --dependency=afterok:$GOLD_JOBID:$RAND_G15_JOBID 
